<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Scan for Controllers -->
    <context:component-scan base-package="com.springdemo" />

    <!-- View Resolver for JSP -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <bean class="com.springdemo.PersonService" name="person1">
        <constructor-arg name="name" value="Khushboo" />
        <constructor-arg name="age" value="25" />
    </bean>

    <bean class="com.springdemo.PersonService" name="person2">
        <property name="name" value="Karan" />
        <property name="age" value="24" />
    </bean>

    <bean class="com.springdemo.App"></bean>
</beans>